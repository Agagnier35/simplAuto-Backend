{
  "name": "simplauto-backend",
  "scripts": {
    "start": "nodemon -e ts,graphql -x ts-node src/index.ts",
    "dev": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
    "debug": "nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
    "build": "rimraf dist && tsc",
    "deploy": "prisma deploy --env-file .env",
    "seeds": "prisma seed --reset --env-file .env",
    "generate": "graphqlgen",
    "prisma-generate": "prisma generate",
    "prettierCI": "prettier-check **/*.ts !**/generated/**",
    "test": "NODE_ENV=test jest --watch",
    "test-win": "SET NODE_ENV=test&& jest --watch",
    "test-ci": "NODE_ENV=test jest"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "@types/bcryptjs": "2.4.2",
    "@types/node": "10.12.18",
    "@types/stripe": "^6.25.6",
    "axios": "^0.18.0",
    "bcryptjs": "2.4.3",
    "cookie-parser": "^1.4.3",
    "dotenv": "6.0.0",
    "dotenv-cli": "1.4.0",
    "graphql-yoga": "1.17.0",
    "jsonwebtoken": "8.4.0",
    "nodemon": "1.18.9",
    "prisma": "^1.28.3",
    "rimraf": "2.6.3",
    "stripe": "^6.27.0",
    "ts-node": "7.0.1",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "3.2.2",
    "typescript-tslint-plugin": "^0.3.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "graphqlgen": "^0.6.0-rc2",
    "jest": "^24.3.0",
    "jest-create-mock-instance": "^1.1.0",
    "jest-transform-graphql": "^2.1.0",
    "prettier": "^1.16.4",
    "prettier-check": "^2.0.0",
    "ts-jest": "^23.10.5"
  }
}
